@import "../../ui/stylesheets/base/normalize"
@import "../../ui/stylesheets/base/mixins"
@import "../../ui/stylesheets/base/colors"
@import "../../ui/stylesheets/base/fonts"

// @import "layout"

$unit = 12px
$gutter = $unit * 2
$column = $gutter * 2
$font-size = 16px
$border-radius = 2px
$max-columns = 20

cols(n)
    n * $column + (n - 1) * $gutter

body-cols(n)
    n * $column + (n + 1) * $gutter

*, *:before, *:after
    box-sizing border-box

html, body
    margin 0 auto

body
    width cols(14)
    padding $gutter

#index
    width cols(9)
    text-align center

    form label
        display inline

    h1, h3
        font-weight normal

    h3
        font-style italic

    ul
        list-style none

footer
    text-align center
    padding $unit 0
    font-size 12px

main
    margin-right cols(4) + $gutter

aside
    width cols(4)
    float right

.inline-block
    display inline-block

.push-right
    margin-right $unit

