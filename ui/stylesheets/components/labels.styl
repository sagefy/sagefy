.label
    border-radius $unit
    display inline-block
    padding 0 ($unit / 2)
    font-weight bold

.label--error, .label--danger
    @extend .label
    color $red-43
    background $red-90

.label--default, .label--base, .label--warn
    @extend .label
    color $gold-43
    background $gold-90

.label--success, .label--accept
    @extend .label
    color $green-43
    background $green-90

.label--accent, .label--info
    @extend .label
    color $blue-43
    background $blue-90

.label--official, .label--admin
    @extend .label
    color $purple-43
    background $purple-90