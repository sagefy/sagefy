html, body, input, textarea, select
    font-family $base-font-family

body
    color $gold-20
    background $gold-99 url('fcfcfa.png')
    font-size $font-size
    line-height unit(($unit * 2) / $font-size, "")

a
    color $blue-66
    transition color 0.2s
    text-decoration none
    border-bottom 1px dashed $blue-66

    &:hover, &.hover, &:focus, &.focus
        color $blue-78
        border-color $blue-78

    &:active, &.active, &.selected
        color $blue-43
        border-color $blue-43

for set in (small 14 24/14) (normal 16 1.5) (accent 18 24/18) (large 20 1.2) (big 26 36/26) (epic 30 36/30)
    .font-size-{set[0]}
        font-size unit(set[1], "px")
        line-height set[2]

.width-limit
    max-width cols(10)

    &.full-width
        max-width auto

h1, h2, h3, h4, h5, h6, p, ul, ol, pre, blockquote, hr
    margin $unit 0

h1, h2, h3, h4, h5, h6
    margin $unit 0

    em
        font-style normal

    strong
        background-color $gold-95
        border-radius $border-radius

    &.subheader
        font-weight normal
        color $gold-43
        font-style italic

h3, h4, h5, h6
    color $gold-43

hgroup
    :not(:first-child)
        margin-top 0
    :not(:last-child)
        margin-bottom 0

h1
    @extend .font-size-epic

h2
    @extend .font-size-big

h3
    @extend .font-size-large

h4
    @extend .font-size-accent

h5
    @extend .font-size-normal

h6
    @extend .font-size-normal

p
    @extend .width-limit

.leading
    @extend .font-size-accent
    color $gold-43

del
    color $gold-66

ins
    text-decoration none
    background $white
    border-radius $border-radius

mark
    background $gold-95
    border-radius $border-radius

abbr
    border-bottom 1px dashed $gold-66

pre, samp, code, kbd
    @extend .monospace
    @extend .font-size-small

small
    @extend .font-size-small

code
    color $gold-43

q
    font-style italic

cite
    font-style normal
    font-variant small-caps
    color $gold-43

    &:before
        color $gold-90
        content "\2022  "

blockquote
    border-left 2px solid $gold-90
    padding-left $unit
    margin-left $unit

    q
        @extend .font-size-accent
        margin-bottom: 0

    q, cite
        display block

hr
    border 0
    background $gold-90
    height 2px
    margin 1em 0
