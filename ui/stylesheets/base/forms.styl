::-webkit-input-placeholder
    color $gold-90

::-moz-placeholder
    color $gold-90

:-ms-input-placeholder
    color $gold-90

input:-moz-placeholder
    color $gold-90

input[type="text"],
input[type="password"],
input[type="number"],
input[type="email"],
input[type="url"],
input[type="time"],
input[type="search"],
input[type="tel"],
textarea
    border 1px solid $gold-78
    background $white
    border-radius $border-radius
    line-height $unit * 2
    box-shadow inset 0 1px 2px $gold-95

    &:hover, &:focus, &.hover, &.focus
        border-color $gold-66
        outline 0

    &:focus, &.focus
        box-shadow inset 0 1px 2px $gold-95, 0 0 1px 1px $gold-78

    &[disabled], &.disabled
        background none
        cursor not-allowed

        &:hover, &:focus, &.hover, &.focus, &:focus, &.focus
            border-color $gold-78
            box-shadow none

input[type="text"],
input[type="password"],
input[type="number"],
input[type="email"],
input[type="url"],
input[type="time"],
input[type="search"],
input[type="tel"]
    padding 0 ($unit / 2)
    height $unit * 2

textarea
    padding ($unit / 2)

input[type="checkbox"],
input[type="radio"]
    -webkit-appearance none
    -webkit-user-select none
    background $white
    border 1px solid $gold-78
    margin 0 1px 0 0
    bottom 2px
    height 13px
    position relative
    vertical-align middle
    width 13px
    box-shadow inset 0 1px 2px $gold-95

    &:checked::before
        -webkit-user-select none
        content ''
        display block
        background $gold-66
        border 1px solid $white
        width 100%
        height 100%

    &:focus, &.focus
        outline 0
        box-shadow inset 0 1px 2px $gold-95, 0 0 1px 1px $gold-78

    &[disabled], &.disabled
        background none
        cursor not-allowed

        &:focus, &.focus
            box-shadow none

input[type="checkbox"]
    border-radius $border-radius

    &:checked::before
        border-radius $border-radius

input[type="radio"]
    border-radius 100%

    &:checked::before
        border-radius 100%

form
    label
        display block

        .required, .optional
            border-radius $border-radius
            margin-left $gutter
            padding 0 ($unit / 4)

        .required
            color $red-43
            background $red-95

        .optional
            color $gold-66

fieldset
    border 1px dashed $gold-78
    margin 0
    padding 0 1em
    border-radius $border-radius

legend
    color $gold-43

select
    height $unit * 2
    padding ($unit / 2) $unit
    font-size 100%
    line-height 1.5
    color $gold-20
    vertical-align middle
    background-color $gold-99
    border 1px solid $gold-78
    border-radius $border-radius

select[multiple]
    font-size 32px
    color $red-43
    background $red-90

.form-description
    @extend .font-size-18
    color $gold-43

.form-field
    margin 1em 0

.form-field__description
    margin 0
    color $gold-43
    font-style italic

.form-field--grouped
    .form-field
        display inline-block

.form--horizontal
    > *
        display inline-block
        @extend .push-right

.form-field__feedback
    display inline-block
    border-radius $border-radius
    padding 0 ($unit / 2)

.form-field--disabled
    label
        color $gold-66

.form-field--success
    label
        color $green-66

    input[type="text"],
    input[type="password"],
    input[type="number"],
    input[type="email"],
    input[type="url"],
    input[type="time"],
    input[type="search"],
    input[type="tel"],
    textarea,
    input[type="checkbox"],
    input[type="radio"]
        color $green-66
        border-color $green-66

    .form-field__feedback
        background $green-95
        color $green-66

.form-field--error
    label
        color $red-66

    input[type="text"],
    input[type="password"],
    input[type="number"],
    input[type="email"],
    input[type="url"],
    input[type="time"],
    input[type="search"],
    input[type="tel"],
    textarea,
    input[type="checkbox"],
    input[type="radio"]
        color $red-66
        border-color $red-66

    .form-field__feedback
        background $red-95
        color $red-66

.form-field--warning
    label
        color $gold-66

    input[type="text"],
    input[type="password"],
    input[type="number"],
    input[type="email"],
    input[type="url"],
    input[type="time"],
    input[type="search"],
    input[type="tel"],
    textarea,
    input[type="checkbox"],
    input[type="radio"]
        color $gold-66
        border-color $gold-66

    .form-field__feedback
        background $gold-95
        color $gold-66