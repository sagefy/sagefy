/*
---
title: Text Inputs
description: Range elements do not use sliders. Instead, ranges are input as two text fields.
elements:
modifiers:
example:
    <form>
        <div class="form-field form-field--text">
            <input type="text" placeholder="Example text input" />
        </div>

        <div class="form-field form-field--text form-field--disabled">
            <label>Disabled</label>
            <input type="text" placeholder="Example disabled" disabled="disabled" />
        </div>

        <div class="form-field form-field--text form-field--success">
            <label>Success</label>
            <input type="text" placeholder="Example success" />
            <span class="form-field__feedback">
                <i class="icon-check"></i>
                This is a success
            </span>
        </div>

        <div class="form-field form-field--text form-field--warning">
            <label>Warning</label>
            <input type="text" placeholder="Example warning" />
            <span class="form-field__feedback">
                <i class="icon-exclamation"></i>
                This is a warning
            </span>
        </div>

        <div class="form-field form-field--text form-field--error">
            <label>Error</label>
            <input type="text" placeholder="Example error" />
            <span class="form-field__feedback">
                <i class="icon-ban-circle"></i>
                This is an error
            </span>
        </div>
    </form>

    <input type="email" placeholder="e.g. alice@example.com" />

    <input type="number" placeholder="0" />

    <input type="url" placeholder="e.g. http://google.com" />

    <input type="time" step="1" />

    <input type="search" placeholder="Search" />

    <input type="search" placeholder="Search" autocomplete="off" />

    <input type="tel" placeholder="e.g. 515-481-9182" />

    <input type="password" />

    <input type="number" placeholder="Min" />
    <input type="number" placeholder="Max" />
---
*/

input[type="text"],
input[type="password"],
input[type="number"],
input[type="email"],
input[type="url"],
input[type="time"],
input[type="search"],
input[type="tel"],
textarea
    border 1px solid $gold-78
    background $white
    border-radius $border-radius
    line-height $unit * 2
    box-shadow inset 0 1px 2px $gold-95, 0 1px 0 $white

    &:hover, &:focus, &.hover, &.focus
        border-color $gold-66
        outline 0

    &:focus, &.focus
        box-shadow inset 0 1px 2px $gold-95, 0 0 1px 1px $gold-78

    &[disabled], &.disabled
        background none
        cursor not-allowed

        &:hover, &:focus, &.hover, &.focus, &:focus, &.focus
            border-color $gold-78
            box-shadow none

input[type="text"],
input[type="password"],
input[type="number"],
input[type="email"],
input[type="url"],
input[type="time"],
input[type="search"],
input[type="tel"]
