.base-button
    border-radius $border-radius
    padding ($unit / 4) ($unit / 2)
    margin 0 auto
    display inline-block
    margin $unit 0
    cursor pointer
    transition all 0.2s

    &:focus, &.focus
        outline 0

    &[disabled], &.button--disabled
        background transparent
        cursor not-allowed

.button--large
    padding ($unit / 2) $unit

.button--epic
    @extend .font-size-26
    padding 0 $unit * 2

.button,
button,
input[type="button"],
.button--cancel,
.button--escape,
.button--prev,
.button--back,
.button--info
    @extend .base-button

    border 1px solid $gold-90
    background $gold-90
    background-image linear-gradient(lighten($gold-90, 5), darken($gold-90, 5))
    color $gold-43

    &:hover, &:focus, &.hover, &.focus
        color $gold-20
        border 1px solid $gold-78
        background $gold-95
        background-image linear-gradient(lighten($gold-95, 5), darken($gold-95, 5))

    &:active, &.active, &.selected
        border 1px solid $gold-66
        background $gold-78
        background-image linear-gradient(darken($gold-78, 5), lighten($gold-78, 5))

    &[disabled], &.button--disabled
        color $gold-78

        &:hover, &:focus, &.hover, &.focus, &:active, &.active, &.selected
            color $gold-78
            border 1px solid $gold-90
            background transparent

button[type="submit"],
.button--primary,
.button--navigation,
.button--next
    @extend .base-button

    border 1px solid $blue-66
    background $blue-66
    background-image linear-gradient(lighten($blue-66, 5), darken($blue-66, 5))
    color $blue-99

    &:hover, &:focus, &.hover, &.focus
        color $white
        border 1px solid $blue-43
        background $blue-78
        background-image linear-gradient(lighten($blue-78, 5), darken($blue-78, 5))

    &:active, &.active, &.selected
        color $blue-95
        border 1px solid $blue-20
        background $blue-43
        background-image linear-gradient(darken($blue-43, 5), lighten($blue-43, 5))

    &[disabled], &.button--disabled
        color $blue-78
        border 1px solid $blue-90

        &:hover, &:focus, &.hover, &.focus, &:active, &.active, &.selected
            color $blue-78
            border 1px solid $blue-90
            background transparent

.button--secondary,
.button--success,
.button--accept
    @extend .base-button

    border 1px solid $green-90
    background $green-90
    background-image linear-gradient(lighten($green-90, 5), darken($green-90, 5))
    color $green-43

    &:hover, &:focus, &.hover, &.focus
        color $green-20
        border 1px solid $green-78
        background $green-95
        background-image linear-gradient(lighten($green-95, 5), darken($green-95, 5))

    &:active, &.active, &.selected
        border 1px solid $green-66
        background $green-78
        background-image linear-gradient(darken($green-78, 5), lighten($green-78, 5))

    &[disabled], &.button--disabled
        color $green-78

        &:hover, &:focus, &.hover, &.focus, &:active, &.active, &.selected
            color $green-78
            border 1px solid $green-90
            background transparent

.button--danger,
.button--error,
.button--delete
    @extend .base-button

    border 1px solid $red-90
    background $red-90
    background-image linear-gradient(lighten($red-90, 3), darken($red-90, 2))
    color $red-43

    &:hover, &:focus, &.hover, &.focus
        color $red-20
        border 1px solid $red-78
        background $red-95
        background-image linear-gradient(lighten($red-95, 3), darken($red-95, 2))

    &:active, &.active, &.selected
        border 1px solid $red-66
        background $red-78
        background-image linear-gradient(darken($red-78, 3), lighten($red-78, 3))

    &[disabled], &.button--disabled
        color $red-78

        &:hover, &:focus, &.hover, &.focus, &:active, &.active, &.selected
            color $red-78
            border 1px solid $red-90
            background transparent

.button-group
    @extend .inline-block
    vertical-align middle

    > *
        float left

        &:first-child:not(:last-child)
            border-top-right-radius 0
            border-bottom-right-radius 0

        &:last-child:not(:first-child)
            border-top-left-radius 0
            border-bottom-left-radius 0

        &:not(:first-child):not(:last-child)
            border-radius 0
